#!/usr/bin/env bash
set -euo pipefail

SCRIPT="${1:-}"
shift || true

if [[ -z "${SCRIPT}" || ! -f "${SCRIPT}" ]]; then
  echo "[run-ps1] ERROR: script not found: ${SCRIPT}" >&2
  exit 66
fi

dos2unix -q "${SCRIPT}" 2>/dev/null || true
exec pwsh -NoLogo -NoProfile -ExecutionPolicy Bypass -File "${SCRIPT}" "$@"
